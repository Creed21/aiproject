<!-- contact block -->
<section class="w3l-contact py-5" id="contact">
    <div class="container py-md-5 py-4">
        <div class="row contact-block">
            <div class="col-md-8 login-center">
                <div class="row">
                    <!-- You will need to handle successMessage and errorMessage here -->
                </div>
                <form action="/createClassRoom" method="POST" class="signin-form">
                    <div class="input-grids">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>ID</p>
                                <input type="text" name="id" placeholder="ID"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <p>Name</p>
                                <input type="text" name="dsc" id="dsc" placeholder="Name" required="true" class="contact-input" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <p>People Capacity</p>
                                <input type="text" name="peopleCapacity" id="peopleCapacity" placeholder="People Capacity" required="true" class="contact-input" />
                            </div>
                            <div class="col-sm-6">
                                <p>Computer Capacity</p>
                                <input class="login-input" type="number" name="computerCapacity" placeholder="Computer Capacity" min="0"/>
                            </div>
                        </div>
                        <select class="form-select" id="classRoomType">
                            <!-- You will need to handle classRoomTypes here -->
                        </select>
                        <select class="form-select" name="newClassRoomType" id="newClassRoomType">
                            <!-- You will need to handle newClassRoomType here -->
                        </select>
                        </br>
                        <div class="row">
                            <div class="text-start">
                                <button class="btn btn-style btn-style-3">Create New Class Room</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

